<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.matteo.diceroller.PlayerSetFragment"
    android:weightSum="8"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/nomePlayer"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_weight="1">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical"
        android:weightSum="8">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text=""
            android:textSize="14dp"
            android:hint="Insert number of D4"
            android:gravity="center"
            android:id="@+id/dQuattroEdt"
            android:layout_weight="1"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text=""
            android:textSize="14dp"
            android:hint="Insert number of D6"
            android:gravity="center"
            android:id="@+id/dSeiEdt"
            android:layout_weight="1"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text=""
            android:textSize="14dp"
            android:hint="Insert number of D8"
            android:gravity="center"
            android:id="@+id/dOttoEdt"
            android:layout_weight="1"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text=""
            android:textSize="14dp"
            android:hint="Insert number of D10"
            android:gravity="center"
            android:id="@+id/dDieciEdt"
            android:layout_weight="1"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textSize="14dp"
            android:text=""
            android:hint="Insert number of D12"
            android:gravity="center"
            android:id="@+id/dDodiciEdt"
            android:layout_weight="1"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text=""
            android:hint="Insert number of D20"
            android:gravity="center"
            android:textSize="14dp"
            android:id="@+id/dVentiEdt"
            android:layout_weight="1"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text=""
            android:textSize="14dp"
            android:hint="Insert number of D100"
            android:gravity="center"
            android:id="@+id/dCentoEdt"
            android:layout_weight="1"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text=""
            android:textSize="14dp"
            android:hint="Insert Modifier"
            android:gravity="center"
            />



    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Save"
        android:id="@+id/button_save"/>

</LinearLayout>
